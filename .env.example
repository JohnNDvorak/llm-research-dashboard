# LLM Research Dashboard - Environment Variables
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to git (it's in .gitignore)

# ==============================================================================
# REQUIRED: LLM Analysis
# ==============================================================================
# Primary LLM provider: xAI grok-4-fast-reasoning
# Get your API key from: https://console.x.ai/
XAI_API_KEY=your_xai_key_here

# ==============================================================================
# REQUIRED: Vector Embeddings
# ==============================================================================
# OpenAI API for text-embedding-3-small (1536 dims, $0.02/1M tokens)
# Get your API key from: https://platform.openai.com/api-keys
# Note: This can also be used as LLM fallback
OPENAI_API_KEY=your_openai_key_here

# ==============================================================================
# REQUIRED: Data Sources
# ==============================================================================
# Twitter API v2 for social metrics
# Get bearer token from: https://developer.twitter.com/
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# LinkedIn Integration (choose ONE approach below)
# ------------------------------------------------
# Option 1: LinkedIn API (Official - requires company page/developer account)
# LINKEDIN_CLIENT_ID=your_linkedin_app_client_id
# LINKEDIN_CLIENT_SECRET=your_linkedin_app_client_secret
# LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Option 2: LinkedIn Scraping (Unofficial - more flexible)
# WARNING: Against LinkedIn ToS, use at your own risk
LINKEDIN_EMAIL=your_linkedin_email@example.com
LINKEDIN_PASSWORD=your_linkedin_password
# Note: Use app-specific password if available, enable 2FA separately

# ==============================================================================
# OPTIONAL: Fallback LLM Providers
# ==============================================================================
# Together AI (GLM-4.6, DeepSeek-V3, Qwen3-Thinking)
# Get API key from: https://api.together.xyz/
TOGETHER_API_KEY=your_together_key

# Google Gemini (Gemini Flash 1.5)
# Get API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_key

# Groq (Llama 3.1 70B - ultra-fast inference)
# Get API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_key

# Anthropic Claude (Haiku 3.5 - quality validation)
# Get API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key

# ==============================================================================
# OPTIONAL: Alternative Embedding Provider
# ==============================================================================
# Voyage AI voyage-2 (better quality, higher cost: $0.10/1M tokens)
# Get API key from: https://www.voyageai.com/
VOYAGE_API_KEY=your_voyage_key

# ==============================================================================
# OPTIONAL: Notifications
# ==============================================================================
# SendGrid for email notifications (100 emails/day free)
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_key
NOTIFICATION_EMAIL=your_email@example.com

# Slack webhook for alerts (optional)
# Create webhook at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ==============================================================================
# Application Configuration
# ==============================================================================
# Database
DATABASE_URL=sqlite:///data/papers.db

# ChromaDB vector store
CHROMA_PERSIST_DIR=data/chroma

# Streamlit server
STREAMLIT_SERVER_PORT=8501

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==============================================================================
# LinkedIn Scraping Configuration (Fine-tuning)
# ==============================================================================
# Delay between LinkedIn requests to avoid rate limiting (seconds)
LINKEDIN_RATE_LIMIT_DELAY=5

# Maximum LinkedIn posts to fetch per day
LINKEDIN_MAX_POSTS_PER_DAY=100

# ==============================================================================
# Budget & Cost Controls
# ==============================================================================
# Daily budget limit in USD (script will stop when exceeded)
DAILY_BUDGET_LIMIT=1.0

# Monthly budget limit in USD
MONTHLY_BUDGET_LIMIT=20.0

# Alert threshold (send notification when budget reaches this %)
BUDGET_ALERT_THRESHOLD=80
